# Cache static assets for better performance
/assets/images/*
  Cache-Control: public, max-age=31536000, immutable

/assets/css/*
  Cache-Control: public, max-age=31536000, immutable

/assets/js/*
  Cache-Control: public, max-age=31536000, immutable

# Cache HTML pages for shorter period
/*.html
  Cache-Control: public, max-age=3600

# Root files
/
  Cache-Control: public, max-age=1800